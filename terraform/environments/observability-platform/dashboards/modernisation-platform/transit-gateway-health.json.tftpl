          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 2 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "queryMode": "Metrics",
          "metricQueryType": 0,
          "metricEditorMode": 0,
          "region": "eu-west-2",
          "namespace": "AWS/TransitGateway",
          "metricName": "BytesIn",
          "statistic": "Sum",
          "dimensions": { "TransitGateway": "*" },
          "label": "{{TransitGateway}}",
          "matchExact": true
        },
        {
          "refId": "B",
          "queryMode": "Metrics",
          "metricQueryType": 0,
          "metricEditorMode": 0,
          "region": "eu-west-2",
          "namespace": "AWS/TransitGateway",
          "metricName": "BytesOut",
          "statistic": "Sum",
          "dimensions": { "TransitGateway": "*" },
          "label": "{{TransitGateway}}",
          "matchExact": true
        },
        { "refId": "C", "expression": "IF(MIN([A,B])>0, 0, 2)", "label": "{{TransitGateway}} traffic_sev" },

        {
          "refId": "D",
          "queryMode": "Metrics",
          "metricQueryType": 0,
          "metricEditorMode": 0,
          "region": "eu-west-2",
          "namespace": "AWS/TransitGateway",
          "metricName": "BytesDropCountBlackhole",
          "statistic": "Sum",
          "dimensions": { "TransitGateway": "*" },
          "label": "{{TransitGateway}}",
          "matchExact": true
        },
        {
          "refId": "E",
          "queryMode": "Metrics",
          "metricQueryType": 0,
          "metricEditorMode": 0,
          "region": "eu-west-2",
          "namespace": "AWS/TransitGateway",
          "metricName": "BytesDropCountNoRoute",
          "statistic": "Sum",
          "dimensions": { "TransitGateway": "*" },
          "label": "{{TransitGateway}}",
          "matchExact": true
        },
        { "refId": "F", "expression": "IF((D+E)>0, 2, 0)", "label": "{{TransitGateway}} drops_sev" },

        { "refId": "G", "expression": "MAX([C,F])", "label": "{{TransitGateway}} overall_sev" }
      ],
      "transformations": [
        {
          "id": "reduce",
          "options": {
            "reducers": ["max"],
            "includeTimeField": false,
            "mode": "reduceFields"
          }
        }
      ]
    },

