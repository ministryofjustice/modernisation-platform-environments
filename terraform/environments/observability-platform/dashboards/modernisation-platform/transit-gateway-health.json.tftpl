      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 1 },
      "options": {
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "OK", "color": "green" },
                "2": { "text": "CRIT", "color": "red" }
              }
