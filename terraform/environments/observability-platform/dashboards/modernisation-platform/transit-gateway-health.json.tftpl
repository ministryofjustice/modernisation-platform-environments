{
  "id": null,
  "uid": "${dashboard_uid}",
  "title": "Transit Gateway Health - ${team_name} (${environment})",
  "tags": ["core-network-services", "transit-gateway", "networking"],
  "schemaVersion": 39,
  "timezone": "browser",
  "refresh": "1m",
  "time": { "from": "now-6h", "to": "now" },

  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },

  "panels": [
    {
      "id": 900,
      "type": "row",
      "title": "Health Signals",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false,
      "panels": []
    },

    {
      "id": 901,
      "type": "stat",
      "title": "Health Signal: TGW Traffic",
      "description": "Per TGW: 0=OK if BytesIn and BytesOut > 0 over range, else 2=CRIT.",
      "datasource": "core-network-services-production-cloudwatch",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 1 },
      "options": {
        "textMode": "value_and_name",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "OK", "color": "green" },
                "2": { "text": "CRIT", "color": "red" }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 2 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "queryMode": "Metrics",
          "metricQueryType": 0,
          "metricEditorMode": 0,
          "region": "eu-west-2",
          "namespace": "AWS/TransitGateway",
          "metricName": "BytesIn",
          "statistic": "Sum",
          "dimensions": { "TransitGateway": "*" },
          "label": "{{TransitGateway}}",
          "matchExact": true
        },
        {
          "refId": "B",
          "queryMode": "Metrics",
          "metricQueryType": 0,
          "metricEditorMode": 0,
          "region": "eu-west-2",
          "namespace": "AWS/TransitGateway",
          "metricName": "BytesOut",
          "statistic": "Sum",
          "dimensions": { "TransitGateway": "*" },
          "label": "{{TransitGateway}}",
          "matchExact": true
        },
        { "refId": "C", "expression": "MIN([A,B])", "label": "{{TransitGateway}} min traffic" },
        { "refId": "D", "expression": "IF(C>0, 0, 2)", "label": "{{TransitGateway}}" }
      ]
    },

    {
      "id": 902,
      "type": "stat",
      "title": "Health Signal: TGW Drops",
      "description": "Per TGW: 0=OK if no drops, else 2=CRIT if any BytesDropCount* > 0 over range.",
      "datasource": "core-network-services-production-cloudwatch",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 1 },
      "options": {
        "textMode": "value_and_name",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "OK", "color": "green" },
                "2": { "text": "CRIT", "color": "red" }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 2 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "queryMode": "Metrics",
          "metricQueryType": 0,
          "metricEditorMode": 0,
          "region": "eu-west-2",
          "namespace": "AWS/TransitGateway",
          "metricName": "BytesDropCountBlackhole",
          "statistic": "Sum",
          "dimensions": { "TransitGateway": "*" },
          "label": "{{TransitGateway}}",
          "matchExact": true
        },
        {
          "refId": "B",
          "queryMode": "Metrics",
          "metricQueryType": 0,
          "metricEditorMode": 0,
          "region": "eu-west-2",
          "namespace": "AWS/TransitGateway",
          "metricName": "BytesDropCountNoRoute",
          "statistic": "Sum",
          "dimensions": { "TransitGateway": "*" },
          "label": "{{TransitGateway}}",
          "matchExact": true
        },
        { "refId": "C", "expression": "A + B", "label": "{{TransitGateway}} drops" },
        { "refId": "D", "expression": "IF(C>0, 2, 0)", "label": "{{TransitGateway}}" }
      ]
    },

    {
      "id": 903,
      "type": "stat",
      "title": "Overall TGW Health (worst TGW)",
