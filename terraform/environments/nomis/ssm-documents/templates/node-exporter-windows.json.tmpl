{
  "schemaVersion": "2.2",
  "description": "Installs node exporter on Windows instances",
  "mainSteps": [
    {
      "action": "aws:runPowerShellScript",
      "name": "InstallNodeExporter",
      "inputs": {
        "runCommand": [
          "Copy-S3Object -BucketName ${bucket_name} -Key node-exporter/wmi_exporter-0.8.3-amd64.msi -LocalFile 'C:\\Program Files (x86)\\wmi_exporter\\wmi_exporter.exe'",
          "msiexec /i 'C:\\Program Files (x86)\\wmi_exporter\\wmi_exporter.exe' LISTEN_PORT=9182"
        ]
      }
    }
  ]
}
