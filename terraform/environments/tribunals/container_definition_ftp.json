[
  {
    "command": [
      "C:\\ServiceMonitor.exe w3svc"
  ],
  "entryPoint": [
      "powershell",
      "-Command"
  ],
    "name"      : "${app_name}-container",
    "image"     : "${container_definition_image}",
    "cpu"       : 512,
    "memory"    : 1024,
    "essential" : true,
    "portMappings" : [
      {
        "hostPort": 0,
        "containerPort": 22,
        "protocol": "tcp"
      },
      {
        "hostPort": 0,
        "containerPort": 80,
        "protocol": "tcp"
      }
    ],
    "logConfiguration" : {
      "logDriver" : "awslogs",
      "options" : {
        "awslogs-group"         : "${awslogs-group}",
        "awslogs-region"        : "eu-west-2",
        "awslogs-stream-prefix" : "ecs"
      }
    },
    "mountPoints": [
      {
        "sourceVolume": "tribunals",
        "containerPath": "C:/inetpub/wwwroot/${documents_location}"
      }
    ]
  }
]
