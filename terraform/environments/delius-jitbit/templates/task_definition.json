[
  {
    "name": "${APP_NAME}",
    "image": "${DOCKER_IMAGE}",
    "cpu": 1536,
    "portMappings": [
      {
        "containerPort": 5000,
        "hostPort": 5000
      }
    ],
    "memory": 3072,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "delius-jitbit-ecs",
        "awslogs-region": "eu-west-2",
        "awslogs-stream-prefix": "jitbit"
      }
    },
    "environment": [
      {
        "name": "AppURL",
        "value": "${APP_URL}"
      },
      {
        "name": "AttachmentsS3Bucket",
        "value": "${S3_BUCKET_NAME}"
      },
      {
        "name": "AttachmentsS3Region",
        "value": "eu-west-2"
      }
    ],
    "secrets": [
      {
        "name": "ConnectionStrings__DBConnectionString",
        "valueFrom": "${DATABASE_PASSWORD_CONNECTION_STRING_ARN}"
      },
      {
        "name": "AttachmentsS3Login",
        "valueFrom": "${S3_USER_KEY_ARN}"
      },
      {
        "name": "AttachmentsS3Password",
        "valueFrom": "${S3_USER_SECRET_ARN}"
      }
    ],
    "essential": true
  }
]
