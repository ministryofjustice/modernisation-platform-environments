{
  "Id": "S3ObjecctAccess",
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3PutObject",
      "Effect": "Allow",
      "Action": ["s3:PutObject"],
      "Resource": [
        "arn:aws:s3:::${bucket_name}/*",
        "arn:aws:s3:::${bucket_name}"
      ],
      "Principal": {
        "Service": ["bcm-data-exports.amazonaws.com"]
      }
    },
    {
      "Sid": "S3ListGetObject",
      "Effect": "Allow",
      "Action": ["s3:ListBucket", "s3:GetBucketLocation"],
      "Resource": ["arn:aws:s3:::${bucket_name}"],
      "Principal": {
        "Service": ["bcm-data-exports.amazonaws.com"]
      }
    },
    {
      "Sid": "S3ReplicateObject",
      "Effect": "Allow",
      "Action": [
        "s3:ReplicateObject",
        "s3:ReplicateDelete",
        "s3:GetBucketVersioning",
        "s3:PutBucketVersioning"
      ],
      "Resource": [
        "arn:aws:s3:::${bucket_name}/*",
        "arn:aws:s3:::${bucket_name}"
      ],
      "Principal": {
        "AWS": [
          "arn:aws:iam::${root_account_id}:role/moj-cur-reports-v2-hourly-replication-role"
        ]
      }
    },
    {
      "Sid": "AthenaAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:ListBucketMultipartUploads",
        "s3:ListMultipartUploadParts",
        "s3:AbortMultipartUpload"
      ],
      "Resource": [
        "arn:aws:s3:::${bucket_name}/athena-results/*",
        "arn:aws:s3:::${bucket_name}/moj-cost-and-usage-reports/*",
        "arn:aws:s3:::${bucket_name}",
        "arn:aws:s3:::${bucket_name}/*"
      ],
      "Principal": {
        "Service": ["athena.amazonaws.com", "glue.amazonaws.com"]
      },
      "Condition": {
        "StringEquals": {
          "aws:SourceAccount": ["${account_id}"]
        }
      }
    },
    {
      "Sid": "S3CrossAccountRoleAccess",
      "Effect": "Allow",
      "Action": ["s3:GetObject", "s3:ListBucket", "s3:PutObject", "s3:PutObjectAcl"],
      "Resource": [
        "arn:aws:s3:::${bucket_name}/*",
        "arn:aws:s3:::${bucket_name}"
      ],
      "Principal": {
        "AWS": [
          "arn:aws:iam::${account_id}:role/moj-coat-${environment}-cur-reports-cross-role"
        ]
      }
    },
    {
      "Sid": "MasterAccountAccess",
      "Effect": "Allow",
      "Action": ["s3:GetObject", "s3:ListBucket", "s3:PutObject", "s3:PutObjectAcl"],
      "Resource": [
        "arn:aws:s3:::${bucket_name}/*",
        "arn:aws:s3:::${bucket_name}"
      ],
      "Principal": {
        "AWS": [
          "arn:aws:iam::${root_account_id}:root"
        ]
      }
    }
  ]
}
