{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ReadWriteToReportsFolder",
      "Effect": "Allow",
      "Action": ["s3:PutObject", "s3:PutObjectAcl", "s3:GetObject"],
      "Resource": [
      "arn:aws:s3:::coat-reports-${environment}/*",
      "arn:aws:s3:::coat-${environment}-cur-v2-hourly/*"
      ]
    },
    {
      "Sid": "ListReportsBucket",
      "Effect": "Allow",
      "Action": ["s3:ListBucket"],
      "Resource": [
      "arn:aws:s3:::coat-reports-${environment}",
      "arn:aws:s3:::coat-${environment}-cur-v2-hourly"
      ]
    },
    {
      "Sid": "AthenaAccessCurV2Hourly",
      "Effect": "Allow",
      "Action": [
        "athena:GetDataCatalog"
        "athena:StartQueryExecution",
        "athena:GetQueryExecution",
        "athena:GetQueryResults",
        "athena:StopQueryExecution",
        "athena:GetWorkGroup",
      ],
      "Resource": [
        "arn:aws:athena:${region}:${account}:workgroup/${athena_workgroup}",
        "arn:aws:athena:${region}:${account}:datacatalog/${data_catalog}"
        ]
    },
    {
      "Sid": "ListAthenaWorkGroups",
      "Effect": "Allow",
      "Action": "athena:ListWorkGroups",
      "Resource": "*"
    },

  ]
}
