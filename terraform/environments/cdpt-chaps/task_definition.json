[
  {
    "name": "${app_name}",
    "image": "${ecr_url}:${docker_image_tag}",
    "requires_compatibilities": ["FARGATE"],
    "cpu": 256,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ],
    "memory": 1024,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "${app_name}-app",
        "awslogs-group": "${app_name}-ecs-log-group"
      }
    },
    "environment": [
      {
        "name": "AWS_REGION",
        "value": "${region}"
      },
      {
        "name": "APP_LOG_LEVEL",
        "value": "debug"
      }
    ],
    "essential": true
  }
]
