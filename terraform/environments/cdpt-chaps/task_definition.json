[
  {
    "name": "${app_name}",
    "image": "${ecr_url}:${docker_image_tag}",
    "essential": true,
    "cpu": 992,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 8080
      }
    ],
    "memory": 5000,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "${app_name}-app",
        "awslogs-group": "${app_name}-ecs-log-group"
      }
    },
    "environment": [
      {
        "name": "AWS_REGION",
        "value": "${region}"
      },
      {
        "name": "APP_LOG_LEVEL",
        "value": "debug"
      }
    ]
  }
]
