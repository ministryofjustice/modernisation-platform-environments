{
  "id": "static-analysis",
  "version": "1.0.0",
  "name": "static-analysis",
  "description": "Static Analysis",
  "options": {
    "trivyVersion": {
      "type": "string",
      "description": "Trivy version (https://github.com/aquasecurity/trivy/releases)",
      "proposals": ["latest"],
      "default": "latest"
    },
    "checkovVersion": {
      "type": "string",
      "description": "Checkov version (https://github.com/bridgecrewio/checkov/releases)",
      "proposals": ["latest"],
      "default": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": ["AquaSecurityOfficial.trivy-vulnerability-scanner"]
    }
  },
  "installsAfter": ["./features/src/base"]
}
